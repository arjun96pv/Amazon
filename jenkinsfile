pipeline {
    agent any
    stages {

        stage('pull') {
            steps {
                git branch: 'main', url: 'https://github.com/arjun96pv/Amazon.git'
            }
        }
stage('Build in Subfolders') {
            steps {
                script {
                                       def subfolders = ['Amazon', 'SKY', 'SpringCore', 'SpringDemo', 'SpringNew', 'test' ,'Test']
                        }
                    }
                }
        stage('compile') {
            steps {
                sh 'mvn compile'
            }
        }

        stage('build') {
            steps {
                 sh 'mvn clean install'
            }
        }
      
    }

  post{

  success{
     echo 'Build success'
  }
    
  failure{
       echo 'Failure in the build'
   }

  }


}
